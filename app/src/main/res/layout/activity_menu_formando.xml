<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MenuAdminActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/roxo">

        <ImageView
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"/>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right|center"
            android:layout_weight="0.5"
            android:textSize="12sp"
            android:background="@drawable/quadrado_azul"
            android:text="Logout"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Bemvind@"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/montserrat"
            android:text="João Pias"
            android:textColor="@color/azul"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/getCursosFormando"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/quadrado_roxo"
            android:gravity="center"
            android:text="Cursos"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/getNotasFormando"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/quadrado_rosa"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Notas"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/getFaltasFormando"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/quadrado_azul"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Faltas"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/getInfoFormando"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/quadrado_rosa"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Informações Pessoais"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

    </LinearLayout>


</LinearLayout>