<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#201544"
android:orientation="vertical"
tools:context=".faltasAdministrador.FaltasAdminVisualizarFormandoListActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:paddingTop="20sp"
        app:srcCompat="@drawable/logo_header_branco" />
</LinearLayout>





    <TextView
        android:fontFamily="@font/montserrat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Visualizar Faltas - Selecionar Formando"
        android:textColor="@color/white" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:textSize="14sp"
        android:fontFamily="@font/montserrat"
        android:id="@+id/text_nomeTurma"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:hint="Nome turma"
        android:background="@drawable/corners"
        />

    <ListView
        android:fontFamily="@font/montserrat"
        android:id="@+id/LV_formandosTurma"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/corners"
        android:divider="@color/white"

        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <Button
        android:layout_margin="80dp"
        android:id="@+id/buttonBack"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/corners_blue"
        android:text="Voltar"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>




</LinearLayout>
