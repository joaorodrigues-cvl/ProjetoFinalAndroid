<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#201544"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cursos"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Cursos"
            android:textSize="12dp"
            app:cornerRadius="4dp" />

        <Button
            android:id="@+id/btn_turmas"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Turmas"
            app:cornerRadius="4dp"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/btn_modulos"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Módulos"
            app:cornerRadius="4dp"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_faltas"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Faltas"
            app:cornerRadius="4dp"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_notas"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Notas"
            app:cornerRadius="4dp"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/btn_users"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="@color/black"
            android:text="Gestão de utilizadores"
            app:cornerRadius="4dp"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>