<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_cursos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"
    android:orientation="vertical"
    tools:context=".cursos.DetalhesCursoActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Detalhes do Curso"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/edit_nome_curso"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            android:padding="5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:text="Descrição"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/edit_descricao_curso"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/corners"
            android:gravity="top"
            android:padding="5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total horas"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/edit_horas_curso"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/corners"
            android:padding="5dp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:id="@+id/btn_modulosCurso"
            android:layout_margin="12dp"
            android:background="@drawable/corners"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Módulos do Curso"
            android:textAllCaps="false"
            android:gravity="center"
            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_edit_curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            app:backgroundTint="@color/rosa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/quadrado_azul"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</LinearLayout>