<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"
    android:orientation="vertical"
    tools:context=".CriarTurmaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Criar Turma"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_nome_turma"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:textSize="14sp"
            android:background="@drawable/corners"
            android:hint="Introduza o nome da turma"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_localizacao_turma"
            android:layout_width="match_parent"
            android:gravity="top"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:background="@drawable/corners"
            android:hint="Introduza a localização"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regime"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/edit_tipo_regime"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            android:hint="Selecionar regime"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_datepickerInicio"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corners_blue"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Data início"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <Button
                android:id="@+id/btn_datepickerInicio"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/corners"
                android:text="Selecionar Data"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_datepickerFim"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corners_red"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Data fim"
                android:textStyle="bold"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <Button
                android:id="@+id/btn_datepickerFim"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/corners"
                android:text="Selecionar Data"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <Button
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/btn_gravar_modulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#20A000"
            android:textColor="#FFFFFF"
            android:text="Gravar"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/corners_blue"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:layout_margin="30dp"
            android:id="@+id/buttonBack"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/quadrado_azul"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>




</LinearLayout>
