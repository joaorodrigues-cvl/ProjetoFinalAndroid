<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"
    android:orientation="vertical"
    tools:context=".turmas.CriarTurmaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="LanÃ§ar faltas - Selecionar turma"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingBottom="130dp"

        >

       <ListView
           android:id="@+id/LV_turmas"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/corners"
           android:divider="@color/white"
           />

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <Button
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/btn_gravar_modulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#20A000"
            android:textColor="#FFFFFF"
            android:text="Gravar"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/corners_blue"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:layout_margin="30dp"
            android:id="@+id/buttonBack"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/quadrado_azul"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>




</LinearLayout>
