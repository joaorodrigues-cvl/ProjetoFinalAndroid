<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"
    android:orientation="vertical"
    tools:context=".modulos.EditarModuloActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Editar Módulo"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_nome_modulo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_descricao_modulo"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="150sp"
            android:background="@drawable/corners"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regime"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_regime_modulo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horas"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_horas_modulo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        >

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btn_gravar_edit_modulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#20A000"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Gravar"
            android:textSize="20dp"
            android:background="@drawable/corners_blue"
            app:cornerRadius="4dp"
            />
        <Button
            android:id="@+id/buttonBack2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/quadrado_azul"
            android:text="Voltar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</LinearLayout>
