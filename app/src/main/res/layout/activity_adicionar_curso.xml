<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_add_cursos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"

    android:orientation="vertical"
    tools:context=".cursos.AdicionarCursoActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>


        <TextView
            android:fontFamily="@font/montserrat"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:text="Adicionar Curso"
            android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        >

        <TextView
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white"
            />

        <EditText
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:id="@+id/edit_nome_curso"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:hint="Introduza o nome do curso"
            android:background="@drawable/corners"
            android:textSize="14sp"
            />
        <TextView
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/white" />

        <EditText
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:id="@+id/edit_descricao_curso"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="150sp"
            android:hint="Descrição do curso"
            android:background="@drawable/corners"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            />
        <TextView
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total horas"
            android:textColor="@color/white" />

        <EditText
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:id="@+id/edit_horas_curso"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:hint="Introduza o total de horas do curso"
            android:background="@drawable/corners"
            android:textSize="14sp"

            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:paddingTop="50dp"
        >

        <Button
            android:id="@+id/btn_gravar_curso"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/corners_green"
            android:text="Gravar"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/corners_blue"
            android:text="Voltar"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
