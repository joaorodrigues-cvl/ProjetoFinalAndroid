<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201544"
    android:orientation="vertical"
    tools:context=".modulos.AdicionarModuloActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="300sp"
            android:layout_height="100sp"
            android:paddingTop="20sp"
            app:srcCompat="@drawable/logo_header_branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="Bem-vindo Administrador"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Adicionar Módulo"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_nome_modulo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            android:hint="Introduza o nome do módulo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_descricao_modulo"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="150sp"
            android:background="@drawable/corners"
            android:hint="Introduza a descrição do módulo"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regime"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_tipo_regime"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            android:hint="Selecionar regime"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horas"
            android:textColor="@color/white" />

        <EditText
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/edit_horas_modulo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/corners"
            android:hint="Total horas"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <Button
            android:background="@drawable/corners"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/btn_gravar_modulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#20A000"
            android:textColor="#FFFFFF"
            android:text="Gravar"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>
